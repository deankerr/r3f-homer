{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": true,

    /* Linting */
    "strict": true,

    /* Paths */
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src",
    ".eslintrc.cjs",
    "prettier.config.cjs",
    "vite.config.ts",
    "tailwind.config.ts",
    "postcss.config.cjs"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
